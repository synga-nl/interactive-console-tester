{
    "name": "Synga/InteractiveConsoleTester",
    "type": "library",
    "description": "Framework to test interactive console applications.",
    "keywords": [
        "Synga",
        "InteractiveConsoleTester",
        "interactive",
        "console",
        "test",
        "tester"
    ],
    "homepage": "https://github.com/Synga/InteractiveConsoleTester",
    "license": "MIT",
    "authors": [
        {
            "name": "Roy Poulse",
            "email": "info@synga.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "react/child-process": "^0.5.2",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Synga\\InteractiveConsoleTester\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Synga\\InteractiveConsoleTester\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
